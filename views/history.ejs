      <p class=" mt-3 lead mb-1" style =" text-align: center">Keep Track Of Previous Reservations In KOE Venues</p>
      
  </div>
  <div class="scrollable">
  <table class="table table-striped mt-4 text-center">
        <thead>
            <tr>
              
                <th>Venue Number</th>
               
                <th>Reserved By</th>
                <th>Reserved On </th>
                
                <th>Slot Start</th>
                <th>Slot End</th>
                <th>Purpose</th>
                <th>Status</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
          <% if(history.length == 0){ %>
            <h2>No previous reservations!</h2>
            <% } %>
            <% for(var i=0; i<history.length; i++) {%>
                <tr>
                      <td><%= history[i].venueRequested %> </td>
                         
                       <td><%= history[i].requestedBy.name %> </td>  
                       <td><%= history[i].reserveStartDate %> </td>  
                       
                       <td><%= history[i].reserveStartTime %> </td> 
                       <td><%= history[i].reserveEndTime %> </td> 
                       <td><%= history[i].purpose %> </td>
                       <% if ( history[i].requestStatus=="accepted") {%> 
                       <td style="color:rgb(35, 248, 7)"><i class="	fas fa-check fa-2x"></i> </td>
                       <td>Request Accepted </td> 
                       <%}%>
                       <% if(history[i].requestStatus=="cancelled"){%>
                        <td><i class="fas fa-user-slash	fa-2x"></i></td>
                        <td>Request Cancelled</td> 
                        <%}%>
                        <% if (history[i].requestStatus=="rejected") {%>
                        <td style="color:rgb(248, 7, 7)"><i class="fa fa-remove fa-2x"></i></td>
                        <td><%= history[i].reasonOfRejection %> </td> 
                       <%}%>
                       
                         
                </tr>
            <% } %>
                
                   
               
        </tbody>
    </table>
