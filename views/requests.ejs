        <tbody>
          <% if(requested.length == 0){ %>
            <h2>No Requests!</h2>
            <% } %>
            <% var requestID=[]; %>
            <% for(var i=0; i<requested.length; i++) { %>
              
              <% requestID[i]=requested[i]._id %>
              
                <tr>
                      
                      <td><%= requested[i].venueRequested %> </td>   
                      <td><%= requested[i].requestedBy.name %> </td>
                      <td><%= requested[i].timeOfRequest%> </td>
                      <td><%= requested[i].reserveStartDate%> </td> 
                      <% if(user.role=="admin"){%>
                        <td><a href = "/dashboard/requests/details/<%= requestID[i] %>">View Details<a> </td>
                        <% }%>
                      <% if(user.role=="user") {%>

                      <% if ( requested[i].requestStatus=="accepted") {%> 
                       <td><i class="	fas fa-thumbs-up fa-2x"></i> </td>
                       <%}%>
                        <% if (requested[i].requestStatus=="rejected") {%>
                        <td><i class="fas fa-thumbs-down fa-2x"></i></td>
                       <%}%>
                    
                      <td><%= requested[i].reasonOfRejection%> </td> 
                      <%}%>
                      
                       
                         
                </tr>
            <% } %>
          
                
                   
               
        </tbody>
    </table>
